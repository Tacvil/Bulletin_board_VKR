<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="Главное">
        <com.example.bulletin_board.settings.CustomListPreference
            android:defaultValue="RU"
            android:entries="@array/language_array"
            android:entryValues="@array/language_array_values"
            android:icon="@drawable/ic_language"
            android:key="LANGUAGE_KEY"
            android:title="Язык приложения" />

        <com.example.bulletin_board.settings.CustomListPreference
            android:defaultValue="hh:mm:ss - yyyy/MM/dd"
            android:entries="@array/time_format_array"
            android:entryValues="@array/time_format_values"
            android:icon="@drawable/ic_calendar"
            android:key="time_format_key"
            android:title="Дата и время" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="Интерфейс">

        <com.example.bulletin_board.settings.CustomListPreference
            android:key="theme_key"
            android:title="Выберите стиль"
            android:defaultValue="Light theme"
            android:icon="@drawable/ic_colors"
            android:dialogTitle="Стиль приложения"
            android:entries="@array/chose_theme_array"
            android:entryValues="@array/chose_theme_values" />
    </PreferenceCategory>

</PreferenceScreen>